{
  "name": "superteam-earn-escrow",
  "version": "0.1.0",
  "description": "On-chain escrow engine with milestone-based payments on Solana",
  "scripts": {
    "dev": "npm run dev --prefix app",
    "build:app": "npm run build --prefix app",
    "build:program": "anchor build",
