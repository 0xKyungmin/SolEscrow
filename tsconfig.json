{
  "compilerOptions": {
    "types": ["mocha", "chai"],
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": "."
  },
  "include": ["tests/**/*.ts", "client/**/*.ts", "scripts/**/*.ts"],
  "exclude": ["node_modules"]
}
